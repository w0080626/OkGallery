<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_photo_folder_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="150dp"
    android:paddingLeft="@dimen/OkGallery_size_12"
    android:paddingRight="@dimen/OkGallery_size_12">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_photo_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_photo_folder_pw_bg"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/OkGallery_size_4"
        android:scrollbars="none" />
</LinearLayout>